{
  "name": "obsidian-cli",
  "version": "0.1.4",
  "description": "CLI for Obsidian using Local REST API",
  "type": "module",
  "bin": {
    "obsidian": "./src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "test": "bun test",
    "lint": "bunx tsc --noEmit",
    "build": "bun build src/index.ts --compile --outfile dist/obsidian",
    "build:all": "bun run build:darwin-arm64 && bun run build:darwin-x64 && bun run build:linux-x64",
    "build:darwin-arm64": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile dist/obsidian-darwin-arm64",
    "build:darwin-x64": "bun build src/index.ts --compile --target=bun-darwin-x64 --outfile dist/obsidian-darwin-x64",
    "build:linux-x64": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile dist/obsidian-linux-x64"
  },
  "dependencies": {
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
